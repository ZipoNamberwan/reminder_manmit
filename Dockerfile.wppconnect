FROM node:18-alpine

WORKDIR /app

# Install dumb-init to handle signals properly
RUN apk add --no-cache dumb-init

# Copy package files
COPY wppconnect-server/package.json .
COPY wppconnect-server/package-lock.json* .

# Install dependencies
RUN npm ci --only=production

# Copy server file
COPY wppconnect-server/server.js .

# Expose port
EXPOSE 21465

# Use dumb-init to run the app
ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "server.js"]
